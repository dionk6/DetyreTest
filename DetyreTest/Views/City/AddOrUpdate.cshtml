@model City
<div class="card">
    <div class="card-header">
        <div class="card-title">
            @(Model.Id == 0 ? "Add City" : "Edit City")
        </div>
    </div>
    <div class="card-body">
        <form asp-action="AddOrUpdate" method="post">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden" asp-for="InsertedDate" value="@Model.InsertedDate" />

            <div class="row">
                <div class="form-group col-lg-6">
                    <label>City</label>
                    <input class="form-control" type="text" asp-for="Name" />
                </div>
                <div class="form-group col-lg-6">
                    <label>Country</label>
                    <select class="form-control" asp-items="ViewBag.countries" asp-for="CountryId">
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label>Is Capital</label>
                    <input class="form-control" type="checkbox" asp-for="IsCapital" />
                </div>
                <div class="form-group col-lg-6">
                    <label>Population</label>
                    <input class="form-control" type="text" asp-for="Population" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label>Area</label>
                    <input class="form-control" type="number" step="any" asp-for="Area" />
                </div>
                <div class="form-group col-lg-6">
                    <label>Budget</label>
                    <input class="form-control" type="number" step="any" asp-for="Budget" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-primary text-white">
                        Save
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>