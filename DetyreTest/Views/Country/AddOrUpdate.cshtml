@model Country
<div class="card">
    <div class="card-header">
        <div class="card-title">
            @(Model.Id == 0 ? "Add Country" : "Edit Country")
        </div>
    </div>
    <div class="card-body">
        <form asp-action="AddOrUpdate" method="post">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden" asp-for="InsertedDate" value="@Model.InsertedDate" />

            <div class="row">
                <div class="form-group col-lg-6">
                    <label>Country</label>
                    <input class="form-control" type="text" asp-for="Name" />
                </div>
                <div class="form-group col-lg-6">
                    <label>Dialling Code</label>
                    <input class="form-control" type="number" asp-for="DiallingCode" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label>Population</label>
                    <input class="form-control" type="text" asp-for="Population" />
                </div>
                <div class="form-group col-lg-6">
                    <label>Currency</label>
                    <input class="form-control" type="text" asp-for="Currency" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-6">
                    <label>Language</label>
                    <input class="form-control" type="text" asp-for="OfficialLanguage" />
                </div>
                <div class="form-group col-lg-6">
                    <label>Continent</label>
                    <input class="form-control" type="text" asp-for="Continent" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-primary text-white">
                        Save
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>